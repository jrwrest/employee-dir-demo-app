<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <% if @employee.avatar.attached? %>
        <%= image_tag @employee.avatar, class: "mx-auto h-20 w-20 rounded-full" %>
      <% else %>
        <img class="mx-auto h-20 w-20 rounded-full" src="https://images.unsplash.com/photo-1491528323818-fdd1faba62cc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
      <% end %>
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900"> <%= @employee.name %></h2>
      <%# <div class="mx-auto max-w-md py-12 px-4 sm:px-0 md:py-16> %>
      <p class="text-sm text-gray-500 text-center">   <%= @employee.email %></p>
      <p class="text-sm text-gray-500 text-center">   <%= @employee.bio %></p>
    </div>
  </div>
